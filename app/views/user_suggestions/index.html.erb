<!-- app/views/user_suggestions/index.html.erb -->
<h2>Public View</h2>
<table border="1">
  <tr>
    <th>First name</th> <th>Last name</th> <th>Suggestion</th>
    <th>Created date</th> <th>Updated date</th>
  </tr>
  <% @usersuggestions.each do |ab| %>
    <tr>
      <td> <%= ab.first_name %> </td> <td> <%= ab.last_name %> </td>
      <td> <%= ab.suggestion %> </td> <td> <%= ab.created_at %></td>
      <td> <%= ab.updated_at %> </td>
    </tr>
  <% end %>
</table>
<br />
<% if cookies.signed[:user_id] == 1 %>
  <%= link_to "Add new", :controller => "user_suggestions", 
    :action => "new" %><br />
  <%= link_to "Edit", :controller => "user_suggestions", :action => "chooseSug" %>
<% end %>
